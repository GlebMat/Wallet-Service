<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="001-create-table" author="matlakhov">

        <createSequence catalogName="clients"
                        schemaName="private_scheme"
                        sequenceName="first_sequence"
                        incrementBy="1"
                        minValue="1"
                        maxValue="1000"
                        cycle="false"
                        dataType="int"
                        startValue="1"
        />

        <createTable tableName="clients" >
            <column name="id" type="BIGINT" autoIncrement="true" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)" >
                <constraints validateNullable="true" unique="true" />
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints validateNullable="true"/>
            </column>
            <column name="balance" type="DECIMAL"/>
        </createTable>

    </changeSet>
</databaseChangeLog>